<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>current_date</fullName>
    <active>true</active>
    <errorConditionFormula>YEAR( MY_Date__c ) !=  YEAR( TODAY())</errorConditionFormula>
    <errorDisplayField>MY_Date__c</errorDisplayField>
    <errorMessage>güncel yılı gir öküz</errorMessage>
</ValidationRule>
